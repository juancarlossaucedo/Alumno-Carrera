<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".vistas.Actualizar">


    <EditText
            android:id="@+id/txtID2"
            android:layout_width="380dp"
            android:layout_height="47dp"
            android:inputType="number"
            android:ems="10"
            android:hint="ID"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintHorizontal_bias="0.354"/>
    <EditText
            android:layout_width="396dp"
            android:layout_height="53dp"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:ems="10"
            android:id="@+id/txtNombre2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.733" app:layout_constraintTop_toBottomOf="@+id/txtID2"
            android:layout_marginTop="40dp"/>
    <EditText
            android:layout_width="393dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:hint="Apellidos"
            android:ems="10"
            android:id="@+id/txtApellido2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.611"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre2" android:layout_marginTop="44dp"/>
    <EditText
            android:layout_width="400dp"
            android:layout_height="51dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email@gmail.com"
            android:id="@+id/txtCorreo2"
            app:layout_constraintTop_toBottomOf="@+id/txtApellido2"
            android:layout_marginTop="52dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <Spinner
            android:layout_width="372dp"
            android:layout_height="53dp" android:id="@+id/spCarrera2"
            app:layout_constraintTop_toBottomOf="@+id/txtCorreo2"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.282"/>
    <Button
            android:text="Actualizar"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/btnActualizar"

            android:backgroundTint="#0220C8"

            app:cornerRadius="15dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.437"
            android:layout_marginBottom="128dp"/>
    <Button
            android:text="Eliminar"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/btnEliminar"

            android:backgroundTint="#F30000"

            app:cornerRadius="15dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25dp"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizar" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.444" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.133"/>

</androidx.constraintlayout.widget.ConstraintLayout>