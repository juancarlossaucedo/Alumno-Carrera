<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".vistas.frmAgregarC">

    <EditText
            android:id="@+id/txtidC"
            android:layout_width="376dp"
            android:layout_height="39dp"
            android:inputType="number"
            android:ems="10"
            android:hint="ID"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintHorizontal_bias="0.457"/>

    <EditText
            android:layout_width="365dp"
            android:layout_height="53dp"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:ems="10"
            android:id="@+id/txtNombreC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.347" app:layout_constraintTop_toBottomOf="@+id/txtidC"
            android:layout_marginTop="36dp"/>
    <Button
            android:text="Agregar"
            android:layout_width="215dp"
            android:layout_height="58dp" android:id="@+id/btnGuardarC"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"

            android:backgroundTint="#F30000"

            app:cornerRadius="15dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="216dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>